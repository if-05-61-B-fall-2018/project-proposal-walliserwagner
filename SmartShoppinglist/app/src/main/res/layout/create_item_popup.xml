<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/create_item_popup_name"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textColor="@color/grey"
                android:textSize="@dimen/default_text_size"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/create_item_popup_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/default_text_size"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/create_item_popup_unit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/default_text_size"
                android:layout_height="match_parent" />
        </LinearLayout>
        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:textColor="@color/grey"
            android:textSize="@dimen/default_text_size"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginEnd="@dimen/text_margin"
            android:id="@+id/autocomplete_category"
            android:layout_width="fill_parent"
            android:layout_gravity="end"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/create_item_popup_add"
            android:text="HinzufÃ¼gen"
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>